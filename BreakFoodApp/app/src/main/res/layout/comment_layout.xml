<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/restaurant_item_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_account_circle_black_24dp" />

                <TextView
                    android:id="@+id/comment_owner"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/restaurant_item_image"
                    android:text="user email"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/comment_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/comment_owner"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="17dp"
                    android:layout_toEndOf="@+id/restaurant_item_image"
                    android:textColor="@android:color/black"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer id porta neque. Sed imperdiet laoreet arcu, et iaculis neque cursus ac. Morbi at velit ac felis tempus dignissim. Aenean varius posuere nulla, eget hendrerit ipsum consectetur vitae. Donec eu nisl lectus. Quisque ultricies dolor eget." />


            </RelativeLayout>


            <TextView
                android:id="@+id/comment_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="05:43 AM feb. 25 2019"
                android:gravity="right"/>


        </LinearLayout>






    </android.support.v7.widget.CardView>
</RelativeLayout>