<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/restaurant_item_image"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/res_placeholder"/>

                <TextView
                    android:id="@+id/restaurant_item_name"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/restaurant_item_image"
                    android:text="McDonald's"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/restaurant_item_price_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/restaurant_item_name"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@+id/restaurant_item_image"
                    android:text="$$" />

                <TextView
                    android:id="@+id/restaurant_item_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/restaurant_item_price_range"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="6dp"
                    android:layout_toEndOf="@+id/restaurant_item_image"
                    android:text="2222-2222" />


            </RelativeLayout>


            <TextView
                android:id="@+id/restaurant_item_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.25 KM"
                android:gravity="center"
                android:textSize="20sp"
                android:background="@color/colorAccent"
                android:textColor="@android:color/background_light"/>

        </LinearLayout>






    </android.support.v7.widget.CardView>
</RelativeLayout>